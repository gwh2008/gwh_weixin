<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.single.mapper.GoodsMapper">

    <select id="goodsFindList" resultType="goods">
        SELECT
            g.id,
            g.good_name,
            g.price,
            g.describe,
            g.supplier,
            g.goodsImg,
            g.message,
            g.recommend,
            g.create_time,
            g.goodsShow,
            g.first_img,
            t.id as typeId,
            t.type_name as type

        FROM
            sl_goods as g,
            sl_type as t

        WHERE
            g.type_id =  t.id
    </select>

    <insert id="insert" parameterType="java.util.Map">
        INSERT INTO `single_data`.`sl_goods`(`good_name`, `price`, `describe`, `create_time`, `supplier`, `goodsImg`, `message`, `recommend`, `goodsShow`,`type_id`,`first_img`)
        VALUES ( #{goodName}, #{price}, #{describe}, #{createTime}, #{supplier}, #{goodsImg}, #{message}, #{recommend}, #{goodsShow}, #{typeId}, #{firstImg});
    </insert>

    <update id="update">
        UPDATE `single_data`.`sl_goods`
        SET `good_name` = #{goodName},
        <if test="price != null and price != ''">
            `price` = #{price},
        </if>
            `describe`= #{describe},
            `supplier` = #{supplier},
        <if test="goodsImg != null and goodsImg != ''">
            `goodsImg` = #{goodsImg},
        </if>
            `message` = #{message},
            `recommend` = #{recommend},
            `goodsShow` = #{goodsShow},
            `type_id` = #{typeId},
            `first_img` = #{firstImg}
            WHERE
                `id` = #{id}
    </update>

    <update id="updateShow">
        UPDATE `single_data`.`sl_goods`
        SET goodsShow = #{goodsShow}
        WHERE
            id = #{id};
    </update>

    <update id="updateRecommend">
        UPDATE `single_data`.`sl_goods`
        SET recommend = #{recommend}
        WHERE
            id = #{id};
    </update>

    <select id="goodFirstImg" resultType="goods">
        SELECT
            g.id,
            g.good_name,
            g.first_img
        FROM
            sl_goods as g
        WHERE
            g.type_id =  #{typeId}
            And
            g.goodsShow = 1
    </select>

    <select id="recommend" resultType="goods">
        SELECT
            g.id,
            g.good_name,
            g.first_img
        FROM
            sl_goods as g
        WHERE
            g.recommend = 1
          And
            g.goodsShow = 1
    </select>

    <select id="goodDetail"  resultType="goods">
        SELECT *
        FROM sl_goods
        WHERE
            sl_goods.id = #{id}
    </select>


</mapper>
